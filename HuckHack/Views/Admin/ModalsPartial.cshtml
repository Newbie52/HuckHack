@using HuckHack.Domain.Entities
<div class="modal fade" id="createEventModal" tabindex="-1" role="dialog" aria-labelledby="createEventModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createTeamModalLabel">Создание события</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-controller="Admin" asp-action="CreateEvent" enctype="multipart/form-data" method="post" class="">
                <div class="modal-body md-form">

                    <div class="md-form col-6">
                        <input id="nameInput" name="Name" class="form-control" type="text" />
                        <label for="nameInput">Название события</label>
                    </div>
                    
                    <div class="md-form col-6">
                        <input id="startDateInput" name="StartDate" placeholder="Selected date" type="text" class="form-control datepicker">
                        <label for="startDateInput">Начало</label>
                    </div>

                    <div class="md-form col-6">
                        <input id="endDateInput" name="EndDate" placeholder="Selected date" type="text" class="form-control datepicker">
                        <label for="endDateInput">Окончание</label>
                    </div>
                    
                    <div class="md-form col-6">
                        <textarea id="descriptionInput" name="Description" class="md-textarea form-control" rows="3" type="text"></textarea>
                        <label for="descriptionInput">Описание</label>
                    </div>

                    <div class="md-form col-6">
                        <input id="cityInput" name="City" class="form-control" type="text" />
                        <label for="cityInput">Город</label>
                    </div>
                    
                    <div class="md-form col-6">
                        <input id="linkInput" name="Link" class="form-control" type="text" />
                        <label for="linkInput">Ссылка</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-rounded">
                        <span>
                            Создать
                            <i class="fas fa-cloud-upload-alt ml-3" aria-hidden="true"></i>
                        </span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(() => {
        $('.datepicker').pickadate();
    });
</script>