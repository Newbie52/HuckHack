@using HuckHack.Domain.Entities
<div class="modal fade" id="createTeamModal" tabindex="-1" role="dialog" aria-labelledby="createTeamModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createTeamModalLabel">Создание команды</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-controller="Teams" asp-action="Create" enctype="multipart/form-data" method="post" class="">
                <div class="modal-body md-form">
                    
                    <div class="md-form col-6">
                        <input id="nameInput" name="Name" class="form-control" type="text" />
                        <label for="nameInput">Название команды</label>
                    </div>

                    <div class="md-form col-6">
                        <input id="membersCountInput" name="MembersCount" class="form-control" type="text" />
                        <label for="membersCountInput">Количество участников</label>
                    </div>

                    <div class="md-form col-6">
                        <textarea id="descriptionInput" name="Description" class="md-textarea form-control" rows="3" type="text"></textarea>
                        <label for="descriptionInput">Описание</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-rounded">
                        <span>
                            Создать
                            <i class="fas fa-cloud-upload-alt ml-3" aria-hidden="true"></i>
                        </span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>