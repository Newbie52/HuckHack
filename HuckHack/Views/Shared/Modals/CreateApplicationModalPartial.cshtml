@using HuckHack.Domain.Entities

<div class="modal fade" id="addApplicationModal" tabindex="-1" role="dialog" aria-labelledby="addApplicationModal"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addApplicationModalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-controller="Teams" asp-action="CreateTeam" enctype="multipart/form-data" method="post" class="">
                <div class="modal-body md-form">

                    <div class="md-form col-12">
                        <div class="row">
                            <div class="col-11">
                                <input id="teamNameInput" name="Name" class="form-control" type="text" placeholder="Имя команды" />
                            </div>
                            <div class="col-1">
                                <i class="fas fa-question-circle pt-2 tooltip-container" data-toggle="tooltip" data-placement="top" title="Не обязательно писать такое, как будет на хаке"></i>
                            </div>
                        </div>
                    </div>


                    <div class="md-form col-12">
                        <div class="row">
                            <div class="col-11">
                                <input id="shortDescriptionInput" name="ShortDescription" class="form-control" type="text" placeholder="Краткое описание(макс. 200 символов)" />
                            </div>
                            <div class="col-1">
                                <i class="fas fa-question-circle pt-2 tooltip-container" data-toggle="tooltip" data-placement="top" title="Рекомендуем написать стек, трек и вакантную роль"></i>
                            </div>
                        </div>

                    </div>
                    <div class="md-form col-12">

                        <div class="row">
                            <div class="col-11">
                                <textarea id="fullDescriptionInput" name="FullDescription" class="form-control md-textarea" placeholder="Полное описание"></textarea>
                            </div>
                            <div class="col-1">
                                <i class="fas fa-question-circle pt-2 tooltip-container" data-toggle="tooltip" data-placement="top" title="Для уточнения деталей, можно также оставить контактные данные"></i>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="EventId" value="@ViewBag.EventId">
                    <input type="hidden" name="EventName" value="@ViewBag.EventName">
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-rounded">
                        <span>
                            Создать
                            <i class="fas fa-cloud-upload-alt ml-3" aria-hidden="true"></i>
                        </span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>